<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lok.camfly"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:icon="@drawable/appicon"
        android:label="CamFlyLok" >
        <activity
            android:label="CamFlyLok"
            android:name=".CamFlyCtrl"
            android:screenOrientation="landscape" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="CamFlyLok"
            android:name="com.lok.camfly.CamFlyList"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:label="CamFlyLok"
            android:name="com.lok.camfly.CamFlySetting"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:label="CamFlyLok"
            android:name="com.lok.camfly.setting.ControlRangeSetting"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:label="CamFlyLok"
            android:name="com.lok.camfly.setting.ParamSetting"
            android:screenOrientation="landscape" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

</manifest>